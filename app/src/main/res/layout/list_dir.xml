<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_dir_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/icon_file_dir" />

            <com.player.sunplayer.view.MarqueeText
                android:id="@+id/tv_dir_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_dir_icon"
                android:padding="5dp"
                android:singleLine="true"
                android:text="@string/action_settings" />

            <TextView
                android:id="@+id/tv_dir_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dir_name"
                android:layout_toRightOf="@+id/iv_dir_icon"
                android:padding="5dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
